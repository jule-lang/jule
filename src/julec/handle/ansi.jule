pub struct AnsiEscape {}

impl AnsiEscape {
    pub const ResetSeq = "\033[0m"
    pub const BoldSeq = "\u001b[1m"
    pub const RedSeq = "\033[31m"
    pub const BrightMagentaSeq = "\033[95m"

    // Reset all ANSI formatting.
    pub static fn Reset() {
        out(AnsiEscape.ResetSeq)
    }

    // Print with ANSI sequence.
    // Resets ANSI after print.
    pub static fn Print(escape: str, text: str) {
        out(escape)
        out(text)
        AnsiEscape.Reset()
    }
}