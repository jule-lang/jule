use integ for std::jule::integrated

fn args(): []str {
	mut args := make([]str, argc)
	for i in args {
		unsafe {
			args[i] = integ::BytePtrToStr(argv[i])
		}
	}
	ret args
}

fn env(): []str {
	const avgEnvVars = 20
	mut env := make([]str, 0, avgEnvVars)
	mut it := envp
	unsafe {
		for *it != nil; it++ {
			env = append(env, integ::BytePtrToStr(*it))
		}
	}
	ret env
}