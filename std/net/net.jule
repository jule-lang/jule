// Network names.
enum Network: str {
    Tcp: "tcp",
    Tcp4: "tcp4",
    Tcp6: "tcp6",
    Udp: "udp",
    Udp4: "udp4",
    Udp6: "udp6",
}

// Common connection behavior.
trait Conn {
    fn Read(mut self, mut buf: []byte)!: int
    fn Write(mut self, buf: []byte)!: int
    fn Close(mut self)!
}

// Common listener behavior.
trait Listener {
    fn Accept(self)!: Conn
    fn Network(self): Network
    fn Close(self)!
}