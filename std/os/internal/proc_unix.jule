use integ "std/jule/integrated"
use "std/sys"

fn Getwd(): str {
	mut buf := unsafe { sys::Getcwd(nil, 0) }
	if buf == nil {
		ret ""
	}
	pwd := unsafe { integ::BytePtrToStr(buf) }
	unsafe { integ::Free(buf) }
	ret pwd
}

fn Chdir(path: str): (ok: bool) {
	s := integ::StrToBytes(path)
	ret unsafe { sys::Chdir(&s[0]) } == 0
}