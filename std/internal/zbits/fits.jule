// Reports whether n fits in bits.
fn Fits(n: i64, bits: uint): bool {
	const MaxBits = 64
	if bits < MaxBits {
		if n < 0 {
			limit := i64(-1) << (bits - 1)
			if n < limit {
				ret false
			}
		} else {
			limit := i64(1)<<(bits-1) - 1
			if n > limit {
				ret false
			}
		}
	}
	ret true
}