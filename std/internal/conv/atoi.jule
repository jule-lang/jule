use nosafe for std::internal::nosafe

fn Atoi(&s: str): (i: int, ok: bool) {
    let mut bs = nosafe::Stobs(s)
    if bs[0] == '-' {
        if bs.len == 1 {
            ret
        }
        bs = bs[1:]
    }
    for _, b in bs {
        if '0' <= b && b <= '9' {
            i *= 10
            i += int(b - '0')
        } else {
            ret
        }
    }
    ok = true
    if s[0] == '-' {
        i = -i
    }
    ret
}
