use integ for std::jule::integrated
use sys for std::sys

// Possible errors:
//  Denied
fn getwd()!: str {
    mut buf := unsafe { sys::Getcwd(nil, 0) }
    if buf == nil {
        error(getLastOsError())
    }
    pwd := unsafe { integ::BytePtrToStr(buf) }
    unsafe { integ::Free(buf) }
    ret pwd
}

// Possible errors:
//  Denied IO Loop LongPath NotExist NotDir InsufficientMemory
fn chdir(path: str)! {
    s := integ::StrToBytes(path)
    if unsafe { sys::Chdir(&s[0]) } == 0 {
        ret
    }
    error(getLastOsError())
}