// Returns string that equals to concatenation of n-count s.
// Returns empty string is n <= 0.
pub fn repeat(s: str, mut n: int): str {
    if n <= 0 {
        ret ""
    }

    let mut ss = s
    for n > 1; n-- {
        ss += s
    }
    ret ss
}
