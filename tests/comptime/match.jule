use "std/comptime"

fn match1() {
	const match comptime::TypeOf(int) {
	| comptime::TypeOf(&int):
		println("foo")
	| comptime::TypeOf(bool):
		println("bar")
	|:
		println("baz")
	}
}

fn match2() {
	const match 20 {
	| 20:
		println("foo")
	| 40:
		println("bar")
	|:
		println("baz")
	}
}

fn match3() {
	const match {
	| false | false:
		println("foo")
	| true | false:
		println("bar")
	|:
		println("baz")
	}
}

fn typeMatch1() {
	const match type int {
	| int:
		println("foo")
	| bool:
		println("bar")
	|:
		println("baz")
	}
}

fn typeMatch2() {
	const match type comptime::TypeOf(int) {
	| *int:
		println("foo")
	| bool:
		println("bar")
	|:
		println("baz")
	}
}

fn main() {}