use fmt for std::fmt
use conv for std::conv
use io for std::io

fn readln(): str {
    let scanner = io::Scanner.newf(io::stdin())
    if (scanner.scan() else { use false }) {
        ret scanner.text()
    }
    ret ""
}

fn numeric_input(msg: str): (f64, ok: bool) {
    fmt::print(msg)
    ok = true
    let input = readln()
    let flt = conv::parse_float(input, 64) else {
        ok = false
        use 0
    }
    ret flt, ok
}

fn main() {
    for {
        let (l, left_ok) = numeric_input("Input left: ")
        if !left_ok {
            fmt::println("Invalid left!")
            continue
        }
        let (r, right_ok) = numeric_input("Input right: ")
        if !right_ok {
            fmt::println("Invalid right!")
            continue
        }
        fmt::print("Choose your op: + - / *\nYour op: ")
        let input = readln()
        match input {
        | "+": fmt::println(l + r)
        | "-": fmt::println(l - r)
        | "*": fmt::println(l * r)
        | "/": fmt::println(l / r)
        |:     fmt::println("Invalid op!")
        }
    }
}
